---
import { AuthModal } from './auth-modal';
import DiscordAuth from './discord-auth/DiscordAuth';
import PoEAuth from './poe-auth/PoEAuth';

const { DISCORD_CLIENT_ID, DISCORD_REDIRECT } = import.meta.env;
const discordOauthUrl = `
  https://discord.com/oauth2/authorize?client_id=${DISCORD_CLIENT_ID}&redirect_uri=${DISCORD_REDIRECT}&scope=identify&response_type=code`;
---

<div class="fixed right-3 top-3 flex flex-col gap-4 min-w-[10rem] z-10">
  <PoEAuth client:only="react" logoutOnly={true} />
  <DiscordAuth
    client:only="react"
    discordOauthUrl={discordOauthUrl}
    logoutOnly={true}
  />
</div>

<AuthModal client:only="react" discordOauthUrl={discordOauthUrl} />
