---
import '../../base.css';
interface Props {
  title: string;
}

const { title } = Astro.props;

import Auth from '../components/auth/Auth.astro';
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />

    <meta name="og:description" content="An app for all smol league enjoyers" />
    <meta property="og:url" content="https://smol-app.netlify.app" />
    <meta property="og:title" content="Smol App" />
    <meta
      property="og:image"
      content="https://smol-app.netlify.app/poe-logo-original.png"
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/poe-logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="max-w-xl md:max-w-2xl lg:max-w-4xl mt-20 m-10 md:m-auto md:mt-20"
  >
    <Auth />
    <slot />
  </body>
</html>
<style is:global>
  html {
    background: #13151a;
    background-size: 224px;
  }
</style>
